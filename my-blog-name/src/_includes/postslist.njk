<div class="col-lg-6 col-md-12 mb-4 pb-2">
    
    <div class="card blog rounded border-0 shadow">
        <div class="position-relative">
            <img src="/images/blog/01.jpg" class="card-img-top rounded-top" alt="...">
            <div class="overlay rounded-top bg-dark"></div>
        </div>
        <div class="card-body content">
            <h5><a href="{{ post.url | url }}" class="card-title title text-dark">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a></h5>
            <div class="post-meta d-flex justify-content-between mt-3">
                <ul class="list-unstyled mb-0">
                    <li class="list-inline-item me-2 mb-0"><a href="{{ post.url | url }}" class="text-muted like"><i class="uil uil-heart me-1"></i>33</a></li>
                    <li class="list-inline-item"><a href="{{ post.url | url }}" class="text-muted comments"><i class="uil uil-comment me-1"></i>08</a></li>
                </ul>
                <a href="{{ post.url | url }}" class="text-muted readmore">Read More <i class="uil uil-angle-right-b align-middle"></i></a>
            </div>
        </div>
        <div class="author">
            <small class="text-light user d-block"><i class="uil uil-user"></i> Calvin Carlo</small>
            <small class="text-light date"><i class="uil uil-calendar-alt"></i> 13th August, 2019</small>
        </div>
    </div>
</div><!--end col-->

{% endfor %}
